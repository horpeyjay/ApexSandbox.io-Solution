public void escalateIfMeetsCriteria(Case c) {
    //code here
    try{
        if(c.Type == 'Mechanical' || c.Type == 'Electrical' && c.Status == 'In Progress' && c.Reason == 'Breakdown'){
            c.IsEscalated = true;
        }
    }catch(Exception ex){
        system.debug(ex.getMessage());
    }
}