public void createCourseAndClass(String name, String description) {
    // code here
    apxio__Course__c newCourse = new apxio__Course__c();
    apxio__Class__c newClass = new apxio__Class__c();

    if(name != null && description != null)
        
        newCourse.Name = name;
        newCourse.apxio__Course_Details__c = description;

    }else if(name == null) {
        newCourse.Name = '';
    }else if(description == null){
        newCourse.description = '';
    }
    insert newCourse;
    Id courseId = newCourse.Id;
        
        newClass.apxio__Course__c = courseId;
        newClass.apxio__Description__c = newCourse.description.left(255);
        newClass.Name = newCourse.Name;

        insert newClass;
    
}