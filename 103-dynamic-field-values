public List<String> getFieldsValue(Account acc, List<String> fields)
{
    // code here
    List<String> result = new List<String>();
    for (String s : fields){
        sObjectField accField = Schema.Account.getFields.getMap().get(s);
        String value = String.ValueOf(acc.get(accField));
        if(value != null){
            result.add(value);
        }else{
            result.add(null);
        }
    }

    return result;

}