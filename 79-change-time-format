public String changeTimeFormat(String strTime) {
    //code here

    // Extract the hour and minute from the string
    Integer myHour = Integer.valueOf(strTime.substring(0, 2));
    Integer myMinute = Integer.valueOf(strTime.substring(3, 5));

    // Determine AM or PM
    String period = 'AM';
    if (myHour >= 12) {
        period = 'PM';
    }
    
    // Convert 24-hour format to 12-hour format
    if (myHour > 12) {
        myHour -= 12;
    } else if (myHour == 0) {
        myHour = 12;
    }

    // Format the time string
    String hourString = myHour < 10 ? '0' + myHour : String.valueOf(myHour);
    String minuteString = myMinute < 10 ? '0' + myMinute : String.valueOf(myMinute);
    String myConvertedStringTime = hourString + ':' + minuteString + ' ' + period;

    return myConvertedStringTime;
}