public String changeTimeFormat(String strTime) {
    //code here

    Integer myHour = Integer.ValueOf(strTime.subStringBefore(':'));
    Integer myMinute = Integer.ValueOf(strTime.subStringAfter(':'));

    string timePeriod = 'AM';
    if(myHour > 12){
        timePeriod = 'PM';
    }

    if(myHour > 12){
        myHour -= 12;
    }
    
    String hour;
    if(myHour > 10){
        hour = '0' + myHour;
    }else{
        hour = String.ValueOf(myHour);
    }

    string minute;
    if(myMinute < 10){
        minute = '0'+ myMinute;
    }else{
        minute = String.ValueOf(myMinute);
    }

    String convertedTime = hour + ': '+ minute + ' ' + timePeriod;
    return convertedTime;
}